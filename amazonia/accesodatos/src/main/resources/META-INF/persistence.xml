<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="com.ipartek.formacion.amazonia.entidades">
    	<class>com.ipartek.formacion.amazonia.entidades.Usuario</class>
    	<class>com.ipartek.formacion.amazonia.entidades.Cliente</class>
    	<class>com.ipartek.formacion.amazonia.entidades.Factura</class>
    	<class>com.ipartek.formacion.amazonia.entidades.Factura$Linea</class>
    	<class>com.ipartek.formacion.amazonia.entidades.Producto</class>

        <properties>    
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:amazonia.db?foreign_keys=on" />
            <property name="jakarta.persistence.jdbc.user" value="" />
            <property name="jakarta.persistence.jdbc.password" value="" />
            
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC" />

            <!-- Automatically export the schema -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
       </properties>

    </persistence-unit>

    <persistence-unit name="com.ipartek.formacion.amazonia.entidades.test">
    	<class>com.ipartek.formacion.amazonia.entidades.Usuario</class>
    	<class>com.ipartek.formacion.amazonia.entidades.Cliente</class>
    	<class>com.ipartek.formacion.amazonia.entidades.Factura</class>
    	<class>com.ipartek.formacion.amazonia.entidades.Factura$Linea</class>
    	<class>com.ipartek.formacion.amazonia.entidades.Producto</class>

        <properties>    
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:amazonia-test.db?foreign_keys=on" />
            <property name="jakarta.persistence.jdbc.user" value="" />
            <property name="jakarta.persistence.jdbc.password" value="" />
            
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC" />

            <!-- Automatically export the schema -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create" />

            <!-- Echo all executed SQL to console -->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.highlight_sql" value="true" />
       </properties>

    </persistence-unit>

</persistence>